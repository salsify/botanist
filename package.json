{
  "name": "botanist",
  "version": "1.2.1",
  "description": "A DSL for traversing and transforming tree structures based on structural rules",
  "main": "lib/index.js",
  "module": "src/index.js",
  "scripts": {
    "build": "yarn run build:clean && yarn run build:es5 && yarn run build:umd",
    "build:clean": "rm -rf lib dist",
    "build:es5": "babel --out-dir lib src",
    "build:umd": "webpack lib dist/botanist.umd.js --output-library-target umd",
    "test": "eslint . && mocha --compilers js:babel/register",
    "prepare": "yarn run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/salsify/botanist.git"
  },
  "author": "Dan Freeman",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/salsify/botanist/issues"
  },
  "homepage": "https://github.com/salsify/botanist#readme",
  "devDependencies": {
    "babel": "^5.8.38",
    "babel-eslint": "^7.1.1",
    "chai": "^3.5.0",
    "eslint": "^3.13.1",
    "mocha": "^3.2.0",
    "sinon": "^1.17.3",
    "webpack": "^2.5.1"
  }
}
